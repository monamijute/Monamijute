extends layout

block content
	div.navbar.navbar-default
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type = "button" data-toggle="collapse" data-target= "#nvcollapse")
					span.sr-only
						Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href = "#")
					|Monami Impex


			.navbar-collapse.collapse.navbar-responsive-collapse
				ul.nav.navbar-nav.pull-right
					li.active 
						a(href="/") Home
					li
						a(href="#"). 
							Company Profile
					li
						a(href="#").
							Photo Gallery
					li
						a(href="#").
							Products
					li.dropdown
						a.dropdown-toggle(data-toggle="dropdown")
							|Dropdown 
							b.caret
						ul.dropdown-menu
							li 
								a(href="#") Action
							li 
								a(href="#") Another Action
					li
						a( href = "#" data-toggle = "modal" data-target = "#sign-modal").
							Sign in

	.container
		.modal.fade#sign-modal(tabindex="-1" role = "dialog" aria-labelledby = "signModalLabel" aria-hidden = "true")
			.modal-dialog
				.modal-content
					.modal-header
						button.close(type="button" class="close" data-dismiss="modal").
							x
						h4.modal-title.
							Sign in
					.modal-body
						form.form-horizontal
							fieldset
								.form-group
									label.col-lg-2.control-label.
										Username
									.col-lg-10
										input.form-control(type = "text" name="username" placeholder = "Username")
								.form-group
									label.col-lg-2.control-label.
										Password
									.col-lg-10
										input.form-control(type = "password" name="username" placeholder = "Password")

					.modal-footer
						button.btn.btn-primary.
							Sign in
						button.btn.btn-default(data-dismiss="modal").
							Close
						

	.container
		.jumbotron
			h1. 
				Welcome to Monami Impex Ltd.
			p.
				All sorts of jute goods manufacturer &amp; exporter
			a(href="#").btn.btn-primary.btn-lg.
					Learn More
		


